<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec"
    android:padding="14dp"
    tools:context="com.sandywinata.isg.view.activity.Visa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtHeaderVisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="VISA"/>
        <TextView
            android:layout_below="@id/txtHeaderVisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Needed :"/>
        <TextView
            android:layout_below="@id/txtHeaderVisa"
            android:id="@+id/txtdetailVisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Needed :"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_below="@id/txtdetailVisa"
            android:id="@+id/txtapplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Needed :"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
