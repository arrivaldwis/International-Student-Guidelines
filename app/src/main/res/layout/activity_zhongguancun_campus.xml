<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec"
    tools:context="com.sandywinata.isg.ZhongguancunCampus">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <!-- ZGC -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/txtHeaderZGC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ZHONGGUANCUN CAMPUS"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16dp"
                />
        </RelativeLayout>

        <!-- Picture 1 -->
        <RelativeLayout
            android:layout_below="@id/txtHeaderZGC"
            android:id="@+id/ZGCPict1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gymnasium"
                android:scaleType="fitXY"/>

        </RelativeLayout>
        <!-- Picture 2 -->
        <!-- <RelativeLayout
            android:layout_below="@id/ZGCPict1"
            android:id="@+id/ZGCPict2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/picture2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="PICTURE"
                android:textColor="@android:color/holo_red_light"
                android:textSize="34sp" />
        </RelativeLayout> -->

        <!-- Content -->
        <RelativeLayout
            android:layout_below="@id/ZGCPict1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtDetailZGC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GET SOME DETAILS"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
