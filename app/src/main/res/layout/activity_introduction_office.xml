<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec"
    tools:context="com.sandywinata.isg.IntroductionOffice">

    <!-- TOP CONTENT -->
    <RelativeLayout
        android:id="@+id/IOPict1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/welcometobit"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <!-- Speech from Ms. Wang -->
    <RelativeLayout
        android:layout_below="@id/IOPict1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/txtspeech">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Introduction Office of The International Student"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="12dp" />
    </RelativeLayout>

    <!-- Content -->
    <RelativeLayout
        android:layout_below="@id/txtspeech"
        android:id="@+id/txtOfficeISC"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Office of International Student BIT"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />
    </RelativeLayout>

</LinearLayout>
